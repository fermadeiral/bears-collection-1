<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:d="urn:import:org.ovirt.engine.ui.common.widget.dialog"
    xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:with field='constants' type='org.ovirt.engine.ui.webadmin.ApplicationConstants'/>

    <ui:style>
        .container {
            padding-top: 20px;
            padding-right: 20px;
            padding-left: 50px;
            padding-right: 20px;
            color: white;
            font-size: 13px;
        }

        .applicationTitleRow {
            padding-top: 20px;
            padding-bottom: 20px;
        }

        .close {
            color: white;
            font-size: 22px;
            font-weight: 600;
            opacity: 1;
        }

        .close:active, .close:hover {
            color: #39a5dc;
        }

        .label {
            font-weight: bold;
            padding-right: 5px;
        }

        .app-title {
            color: white;
            font-size: 20px;
            font-weight: 200;
        }
    </ui:style>

    <d:OVirtBootstrapModal width="565px" height="355px" addStyleNames="obrand_aboutBackground">
        <b:Container addStyleNames="{style.container}" fluid="true">
            <b:Row>
                <b:Column size="SM_12">
                    <g:Button ui:field="closeIconButton" addStyleNames="close {style.close}"><span class="pficon pficon-close" /></g:Button>
                </b:Column>
            </b:Row>
            <b:Row addStyleNames="{style.applicationTitleRow}">
                <b:Column size="SM_12">
                    <g:InlineLabel ui:field="applicationTitle" addStyleNames="{style.app-title}" />
                </b:Column>
            </b:Row>
            <b:Row>
                <b:Column size="SM_12">
                    <g:InlineLabel ui:field="versionLabel" addStyleNames="{style.label}" />
                    <g:InlineLabel ui:field="versionText" />
                </b:Column>
            </b:Row>
            <b:Row>
                <b:Column size="SM_12">
                    <g:InlineLabel ui:field="serverNameLabel" addStyleNames="{style.label}" />
                    <g:InlineLabel ui:field="serverNameText" />
                </b:Column>
            </b:Row>
            <b:Row>
                <b:Column size="SM_12">
                    <g:Label ui:field="copyrightNotice" />
                </b:Column>
            </b:Row>
            <b:Row>
                <b:Column size="SM_12">
                    <g:Label ui:field="logo" addStyleNames="obrand_aboutApplicationLogo" />
                </b:Column>
            </b:Row>
        </b:Container>
    </d:OVirtBootstrapModal>

</ui:UiBinder>
